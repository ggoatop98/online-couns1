rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public to submit (create) forms, but only Admins (auth != null) can read/update/delete
    match /counseling_student/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    match /counseling_parent/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    match /counseling_teacher/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    
    // Teacher Password Config
    // READ: Must be public so the Teacher Form can verify the password client-side
    // WRITE: Only Admins can change the password
    match /config/teacher_auth {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}